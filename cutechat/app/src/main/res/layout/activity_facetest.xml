<?xml version="1.0" encoding="utf-8"?>
<com.init.cutechat.ui.FaceTestLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:scrollbars="vertical"
    android:id="@+id/faceTestLayout"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/titlebar">

    </RelativeLayout>
    <com.init.cutechat.ui.FaceView
        android:id="@+id/fv_points"
        android:layout_alignTop="@+id/rl_facetest"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <SurfaceView
        android:id="@+id/fv_test"
        android:layout_alignTop="@+id/rl_facetest"
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:layout_marginRight="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <RelativeLayout
        android:id="@+id/rl_facetest"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle"
            android:layout_width="220dp"
            android:layout_height="220dp" />
        <com.init.cutechat.ui.CuteFaceView
            android:id="@+id/cfv_test"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </RelativeLayout>
    <com.init.cutechat.ui.component.HorizontalListView
        android:id="@+id/lv_choice"
        android:layout_above="@+id/layout_operation"
        android:layout_width="match_parent"
        android:layout_height="160dp"></com.init.cutechat.ui.component.HorizontalListView>

    <include
        android:id="@+id/layout_operation"
        layout="@layout/layout_operation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></include>

</com.init.cutechat.ui.FaceTestLayout>